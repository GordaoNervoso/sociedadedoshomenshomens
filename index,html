<header>
    <h1>Sociedade dos Homens Homens</h1>
    <nav>
        <a href="#" onclick="showHome()">Início</a>
        <a href="#" onclick="showLogin()">Login</a>
        <a href="#" onclick="showRegister()">Criar Conta</a>
    </nav>
</header>

<div class="container">

    <div class="box active" id="home">
        <h2>Bem-vindo</h2>
        <p style="text-align:center;">
            Este é um site de exemplo com login local.<br><br>
            Use o menu acima para navegar.
        </p>
    </div>

    <div class="box" id="login">
        <h2>Login</h2>
        <input type="text" id="loginUser" placeholder="Usuário">
        <input type="password" id="loginPass" placeholder="Senha">
        <button onclick="login()">Entrar</button>
        <div class="message" id="loginMsg"></div>
    </div>

    <div class="box" id="register">
        <h2>Criar Conta</h2>
        <input type="text" id="regUser" placeholder="Usuário">
        <input type="password" id="regPass" placeholder="Senha">
        <button onclick="register()">Registrar</button>
        <div class="message" id="regMsg"></div>
    </div>

</div>

<script>
function hideAll() {
    document.querySelectorAll(".box").forEach(b => b.classList.remove("active"));
}

function showHome() {
    hideAll();
    document.getElementById("home").classList.add("active");
}

function showLogin() {
    hideAll();
    document.getElementById("login").classList.add("active");
}

function showRegister() {
    hideAll();
    document.getElementById("register").classList.add("active");
}

function register() {
    let user = regUser.value;
    let pass = regPass.value;

    if (!user || !pass) {
        regMsg.innerText = "Preencha todos os campos.";
        return;
    }

    localStorage.setItem("user", user);
    localStorage.setItem("pass", pass);
    regMsg.innerText = "Conta criada com sucesso!";
}

function login() {
    let user = loginUser.value;
    let pass = loginPass.value;

    let savedUser = localStorage.getItem("user");
    let savedPass = localStorage.getItem("pass");

    if (user === savedUser && pass === savedPass) {
        loginMsg.innerText = "Login realizado com sucesso!";
    } else {
        loginMsg.innerText = "Usuário ou senha incorretos.";
    }
}
</script>

